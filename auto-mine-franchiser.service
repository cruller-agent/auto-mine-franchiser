[Unit]
Description=Auto-Mine Franchiser - Generic Mining Bot
After=network.target

[Service]
Type=simple
User=donut-agent
WorkingDirectory=/home/donut-agent/.openclaw/workspace/auto-mine-franchiser
ExecStart=/usr/bin/node scripts/monitor.js
Restart=always
RestartSec=10
StandardOutput=append:/var/log/auto-mine-franchiser/output.log
StandardError=append:/var/log/auto-mine-franchiser/error.log

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
